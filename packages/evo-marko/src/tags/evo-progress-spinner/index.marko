export interface Input extends Marko.HTML.Span {
    size?: "large" | "small" | "regular";
}
<const/{ class: inputClass, size, ...htmlInput }=input/>

<span
    ...htmlInput
    class=[
        "progress-spinner",
        size === "large" && "progress-spinner--large",
        inputClass,
    ]
    role="img"
>
    <if=(size === "large")>
        <evo-spinner-30-icon/>
    </if>
    <else if=(size === "small")>
        <evo-spinner-20-icon/>
    </else>
    <else>
        <evo-spinner-24-icon/>
    </else>
</span>
